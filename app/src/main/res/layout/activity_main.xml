<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:backgroundTint="@color/colorPrimaryLight"
    android:fitsSystemWindows="true"
    android:isScrollContainer="true"
    tools:context=".MainActivity">


    <androidx.constraintlayout.helper.widget.Layer
        android:id="@+id/map_layer"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bar"
        app:layout_constraintTop_toTopOf="parent"
        app:constraint_referenced_ids="title_heading,map_fragment"
        />


    <TextView
        android:id="@+id/title_heading"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:elevation="2dp"
        android:text="@string/app_name"
        android:textColor="@color/colorBlack"
        android:textSize="27sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toTopOf="parent" />


    <fragment
        android:id="@+id/map_fragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:minHeight="100dp"
        app:layout_constraintBottom_toBottomOf="@id/map_layer"
        app:layout_constraintEnd_toEndOf="@id/map_layer"
        app:layout_constraintStart_toStartOf="@id/map_layer"
        app:layout_constraintTop_toTopOf="@id/map_layer"
        app:layout_constraintVertical_bias="1.0"
        tools:context=".MainActivity" />













    <androidx.constraintlayout.helper.widget.Layer
        android:id="bar_layer"
        app:constraint_referenced_ids="bar,location_permission,add_new_location_,enable_geofences"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintTop_toTopOf="@id/map_layer"
        app:layout_constraintBottom_toTopOf="@id/list_layer"

        />


    <View
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.348" />

    <ImageButton
        android:id="@+id/location_permission"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_location_permission_24dp"
        android:elevation="2dp"
        android:onClick="onLocationPermissionClicked"
        app:layout_constraintBottom_toBottomOf="@+id/bar"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@id/guideline_left"
        app:layout_constraintTop_toTopOf="@id/bar"
        app:layout_constraintEnd_toStartOf="@id/add_new_location_"
        android:contentDescription="TODO" />

    <ImageButton
        android:id="@+id/add_new_location_"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="2dp"
        android:src="@drawable/add_new_location"
        app:layout_constraintTop_toTopOf="@id/bar"
        app:layout_constraintBottom_toBottomOf="@id/bar"
        app:layout_constraintStart_toEndOf="@id/location_permission"
        app:layout_constraintEnd_toStartOf="@id/enable_geofences"
        />

    <ImageSwitcher
        android:id="@+id/enable_geofences"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ic_enable_geofences_24dp"
        android:elevation="2dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        app:layout_constraintStart_toStartOf="@id/location_permission"
        app:layout_constraintTop_toTopOf="@id/bar"
        app:layout_constraintBottom_toBottomOf="@id/bar"
        />


















    <androidx.constraintlayout.helper.widget.Layer
        android:id="list_layer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:constraint_referenced_ids="autocomplete_fragment,places_list_recycler_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />



    <fragment
        android:id="@+id/autocomplete_fragment"
        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/add_new_location"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintStart_toEndOf="@id/guideline_left"
        app:layout_constraintTop_toTopOf="@+id/list_layer" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/places_list_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="@style/Theme.MaterialComponents.NoActionBar"
        android:paddingTop="20dp"

        android:paddingBottom="20dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="bar"
        app:layout_constraintVertical_bias="1.0" />




    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />



</androidx.constraintlayout.widget.ConstraintLayout>

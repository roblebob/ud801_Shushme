<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true">


    <TextView
        android:id="@+id/settings_heading_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/settings_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/location_permission_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/location_permission_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingStart="4dp"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:src="@drawable/ic_my_location_primary_24dp"
        app:layout_constraintBottom_toTopOf="@+id/enable_geofences_iv"
        app:layout_constraintEnd_toStartOf="@+id/location_permissions_tv"
        app:layout_constraintStart_toStartOf="@+id/settings_heading_tv"
        app:layout_constraintTop_toBottomOf="@+id/settings_heading_tv" />


    <TextView
        android:id="@+id/location_permissions_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/location_permissions"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/location_permission_iv"

        app:layout_constraintEnd_toStartOf="@+id/location_permission_checkbox"
        app:layout_constraintStart_toEndOf="@+id/location_permission_iv"
        app:layout_constraintTop_toTopOf="@+id/location_permission_iv" />


    <CheckBox
        android:id="@+id/location_permission_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:onClick="onLocationPermissionClicked"
        app:layout_constraintBottom_toBottomOf="@+id/location_permissions_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/location_permissions_tv"
         />

    <ImageView
        android:id="@+id/enable_geofences_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingStart="4dp"
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp"
        android:src="@drawable/ic_globe_primary_24dp"
        app:layout_constraintBottom_toTopOf="@+id/map_fragment"
        app:layout_constraintEnd_toStartOf="@+id/enable_switch"
        app:layout_constraintStart_toStartOf="@+id/settings_heading_tv"
        app:layout_constraintTop_toBottomOf="@+id/location_permission_iv"

        app:layout_constraintVertical_chainStyle="packed" />

    <Switch
        android:id="@+id/enable_switch"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="@string/enable_geofences"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/enable_geofences_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/enable_geofences_iv"
        app:layout_constraintTop_toTopOf="@+id/enable_geofences_iv" />


    <fragment
        android:id="@+id/map_fragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toTopOf="@+id/locations_heading_tv"
        app:layout_constraintEnd_toEndOf="@+id/location_permission_checkbox"
        app:layout_constraintStart_toStartOf="@+id/location_permission_iv"
        app:layout_constraintTop_toBottomOf="@+id/enable_geofences_iv"
        tools:context=".MainActivity" />


    <TextView
        android:id="@+id/locations_heading_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/location_list"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toTopOf="@+id/add_new_location_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/location_permission_iv"
        app:layout_constraintTop_toBottomOf="@+id/map_fragment" />






    <Button
        android:id="@+id/add_new_location_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/colorPrimary"
        android:onClick="onAddPlaceButtonClicked"
        android:text="@string/add_new_location"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@android:color/white"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/autocomplete_fragment"
        app:layout_constraintEnd_toEndOf="@+id/map_fragment"
        app:layout_constraintStart_toStartOf="@+id/locations_heading_tv"
        app:layout_constraintTop_toBottomOf="@+id/locations_heading_tv" />


    <ImageView
        android:id="@+id/current_location_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_my_location_primary_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/add_new_location_button"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/add_new_location_button"
        app:layout_constraintTop_toTopOf="@+id/add_new_location_button" />

    <fragment
        android:id="@+id/autocomplete_fragment"
        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/add_new_location_button"
        app:layout_constraintEnd_toEndOf="@+id/add_new_location_button"
        app:layout_constraintStart_toEndOf="@+id/current_location_iv"
        app:layout_constraintTop_toTopOf="@+id/add_new_location_button" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="current_location_iv,autocomplete_fragment" />






    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/places_list_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/powered_by_google_iv"
        app:layout_constraintEnd_toEndOf="@+id/add_new_location_button"
        app:layout_constraintStart_toStartOf="@+id/add_new_location_button"
        app:layout_constraintTop_toBottomOf="@+id/autocomplete_fragment"

        />


    <!-- TODO [âœ“] (9) Add the "Powered by Google" logo and a link to Google's privacy policy here -->


    <ImageView
        android:id="@+id/powered_by_google_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="4dp"
        android:src="@drawable/powered_by_google_on_white"
        app:layout_constraintBottom_toTopOf="@+id/google_privacy_policy_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/google_privacy_policy_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:gravity="center_horizontal"
        android:paddingBottom="4dp"
        android:text="@string/privacy"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
